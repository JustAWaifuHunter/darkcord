{
    "eslint.workingDirectories": [
        {
            "pattern": "./apps/*"
        },
        {
            "pattern": "./packages/*"
        }
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro",
        "typescript",
        "typescriptreact"
    ],
    "prettier.documentSelectors": [
        "**/*.astro"
    ],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": false
    },
    "files.associations": {
        "*.mdx": "markdown"
    },
    "files.insertFinalNewline": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/tsconfig.json": true
    },
    "workspace.isHidden": true,
    "cSpell.words": [
        "darkcord",
        "docgen",
        "tsup"
    ]
}
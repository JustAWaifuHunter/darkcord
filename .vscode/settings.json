{
    "eslint.workingDirectories": [
        {
            "pattern": "./apps/*"
        },
        {
            "pattern": "./packages/*"
        }
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro",
        "typescript",
        "typescriptreact"
    ],
    "prettier.documentSelectors": [
        "**/*.astro"
    ],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": false
    },
    "files.associations": {
        "*.mdx": "markdown"
    },
    "files.insertFinalNewline": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/Thumbs.db": false,
        "**/node_modules": false,
        "**/tsconfig.json": false
    },
    "workspace.isHidden": false,
    "cSpell.words": [
        "darkcord",
        "docgen",
        "tsup"
    ]
}
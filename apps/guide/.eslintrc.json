{
	"extends": ["neon/common", "neon/react", "neon/astro", "neon/prettier"],
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"ignorePatterns": ["**/dist/*"],
	"rules": {
		"react/jsx-filename-extension": [1, { "extensions": [".tsx", ".astro"] }]
	}
}
